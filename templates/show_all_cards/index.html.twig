{% extends 'base.html.twig' %}

{% block title %}Dixit-online: Descubre todas las cartas del juego{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Cartas disponibles</h1>
    </div>
{#    {{ dump(controller_name, cards|batch(4)) }}#}
    {% for subsetcards in cards|batch(6)  %}
    <div class="row">
{#        {% dump(subsetcards) %}#}
        {% for card in subsetcards %}
        <div class="col-sm-12 col-md-6 col-lg-2">
{#            {{ dump(card) }}#}
            <div class="card mb-4">
                <img src="{{ asset("images/cards/" ~ card.getFilename()) }}" class="card-img-top img-fluid" alt="{{ card.getFilename() }}">
                <div class="card-body p-0 m-0">
                    <h5 class="card-title text-center p-2 m-0">{{ card.getFilename() }}</h5>
{#                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>#}
{#                    <a href="#" class="btn btn-primary">Go somewhere</a>#}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endfor %}
</div>
{% endblock %}
